<!-- この番号のブースの作品があった場合 -->
<% if (exhibit) { %>
<a-assets>
  <img
    id="asset-exhibit-panel-thumbnail-<%=exhibit.id%>"
    src="<%=exhibit.thumbnail%>"
    crossorigin="anonymous"
  />
  <a-asset-item
    id="asset-overview"
    src="<%=exhibit.presentationImage%>"
  ></a-asset-item>
  <img id="comming_soon1" src="/honnban/assets/img/comming_soon1.jpg" />
  <!-- いいね -->
  <a-asset-item
    id="asset-like"
    src="/honnban/assets/model/little_chick/scene.gltf"
  ></a-asset-item>
  <!-- いいね_ASSET -->
  <a-asset-item
    id="asset-nice"
    src="/honnban/assets/model/beating_heart/scene.gltf"
  ></a-asset-item>
  <!-- icon_ranking -->
  <img id="asset-rank1" src="/honnban/assets/img/icon_no1.png" />
  <img id="asset-rank2" src="/honnban/assets/img/icon_no2.png" />
  <img id="asset-rank3" src="/honnban/assets/img/icon_no3.png" />
</a-assets>

