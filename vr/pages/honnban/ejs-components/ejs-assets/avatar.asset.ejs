<a-assets>
  <!-- 来場者character -->
  <template id="avatar-template">
    <a-entity class="avatar" networked-audio-source>
      <!-- リアクション_ASSET -->
      <!-- idがavatar_reactionじゃないと動かないです -->
      <a-image
        id="avatar_reaction"
        src="/honnban/assets/img/emo_cry.png"
        position="-0.04 0.05 0.32"
        rotation="0 0 0"
        scale="0.4 0.4 0.4"
        look-at="#player"
        visible="false"
      ></a-image>
      <!-- ユーザー名_ASSET -->
      <a-entity
        class="head"
        id="name"
        text="value: ペンギン; align: center; negate:false; font: /honnban/assets/fonts/noto-sans-cjk-jp/noto-sans-cjk-jp-msdf.json; font-image: /honnban/assets/fonts/noto-sans-cjk-jp/noto-sans-cjk-jp-msdf.png"
        position="-0.05 -0.2 0.25"
        scale="2 2 2"
        look-at="#player"
      ></a-entity>
      <!-- チャットアイコン -->
      <a-image
        id="avatar_chat_on"
        src="/honnban/assets/img/sound.png"
        position="-0.05 -0.32 0.25"
        scale="0.15 0.15 0.15"
        look-at="#player"
        visible="false"
      ></a-image>
      <!-- idをavatar_modelにしないと動かないです -->
      <a-gltf-model
        id="avatar_model"
        class="head"
        src="/honnban/assets/model/super_carrot/scene.gltf"
        scale="0.007 0.007 0.007"
        rotation="-10 180 0"
        position="0 -1 0"
      ></a-gltf-model>
    </a-entity>
  </template>
</a-assets>
